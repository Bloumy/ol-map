{
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "yoda": [
            "error",
            "always"
        ]
        // "quotes": ["error", "double"]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "ignorePatterns": [
        "dist/*"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "es6": true
    },
    "globals": {
        "ol": "writable"
    }
}